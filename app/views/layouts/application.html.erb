<!DOCTYPE html>
<html>
  <head>
    <title>WanderlustConnect</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js' %>

  </head>

  <body>
   <%= render 'shared/navbar' %> <!-- Render the navbar partial -->

    <!-- Landing Photo Section -->
    <section class="landing-photo">
      <%= image_tag 'landing_photo.png', alt: 'Landing photo', width: '100%' %>
      <div class="landing-buttons">
        <button>Register</button>
        <button>Login</button>  
      </div>
    </section>

    <div class="container">
      <%= yield %>
    </div>

    <%= render 'shared/footer' %> <!-- Render the footer partial -->
  </body>
  
</html>
