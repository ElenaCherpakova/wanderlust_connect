<div class="container-fluid">
  <div class="card mt-2">
    <div class="card-body">
      <h2 class="card-title">Country:</h2>
      <h3 class="card-text"><%= render @country %></p>

      <div class="d-flex p-2">
        <%= link_to(edit_country_path(@country), class: "btn btn-primary", title: "Edit this country") do %>
          <%= fa_icon 'edit' %> Edit
        <% end %>
    
        <%= button_to(@country, method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this country?' }, class: "btn btn-danger ms-2", title: "Delete this country") do %>
          <%= fa_icon 'trash' %> Delete
        <% end %>
          <%= link_to(countries_path, class: "btn btn-secondary ms-2", title: "Back to countries") do %>
          <%= fa_icon 'arrow-left' %> Countries
        <% end %>
      </div>
    </div>
  </div>

