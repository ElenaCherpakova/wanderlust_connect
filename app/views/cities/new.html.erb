<div class="container-fluid">
  <h1 class="display-4">New city</h1>
  <div class="row">
    <div class="col-md-6">
      <%= render "form", city: @city %>
      <% if @country.present? %>
        <%= link_to cities_path(country_id: @country.id), class: "btn btn-primary" do %>
          <%= fa_icon 'arrow-left' %> Cities
        <% end %>
      <% else %>
        <%= link_to cities_path, class: "btn btn-primary" do %>
          <%= fa_icon 'arrow-left' %> Cities
        <% end %>
      <% end %>
    </div>
  </div>
</div>
