<div class="container">
  <h1 class="display-4">Editing city</h1>
  <div class="row">
    <div class="col-md-6">
        <%= render "form", city: @city %>
    </div>
    <div>
      <%= link_to country_city_path(@country, @city), class: "btn btn-primary" do %>
        <%= fa_icon 'eye' %> City
      <% end %>
      <%= link_to country_cities_path(@country), class: "btn btn-secondary" do %>
        <%= fa_icon 'arrow-left' %> Cities
      <% end %>
    </div>
  </div>
</div>