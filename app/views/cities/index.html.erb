<div class="container-fluid">
  <% if @country %>
    <h1 class="display-4 mt-3">Cities in <%= @country.name %></h1>
  
    <% if @cities.any? %>
      <div class="table-responsive mt-3">
        <table class="table table-bordered">
          <thead>
            <tr class="text-center">
              <th>Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @cities.each do |city| %>
              <tr>
                <td><%= city.name %></td>
                <td class="text-center">
                  <%= link_to city_path(city), class: 'btn btn-primary' do %>
                    <%= fa_icon 'eye' %> City
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "New city", new_city_path, class: 'btn btn-success' %>
      </div>
    <% else %>
      <div class="text-center">
        <p>No cities found.</p>
      </div>
      <%= link_to countries_path, class: "btn btn-secondary" do %>
        <%= fa_icon 'arrow-left' %> To countries
      <% end %>
    <% end %>
  <% else %>
    <p>No specific country selected. Showing all available cities.</p>
  <% end %>
</div>
