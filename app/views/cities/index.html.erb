<div class="container-fluid">
  <% if @country %>
    <h1 class="display-4 mt-3">Cities in <%= @country.name %></h1>
  
    <% if @cities.any? %>
      <div class="table-responsive mt-3">
        <table class="table table-bordered">
          <thead>
            <tr class="text-center">
              <th>Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody> 
            <% @cities.each do |city| %>
              <tr class="text-center">
                <td><%= city.name %></td>
                <td>
                  <%= link_to city_path(city), class: 'btn btn-primary' do %>
                    <%= fa_icon 'eye' %> City
                  <% end %>
                     <%= link_to country_city_places_path(@country, city), class: "btn btn-primary" do %>
                <%= fa_icon 'eye' %> Places
              <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    <div class="d-flex justify-content-between align-items-center">
        <%= link_to "New city", new_city_path, class: 'btn btn-success' %>
        <%== pagy_nav(@pagy)%>
        </div>
      </div>
    <% else %>
      <div class="text-center">
        <p>No cities found.</p>
      </div>
      <%= link_to countries_path, class: "btn btn-secondary" do %>
        <%= fa_icon 'arrow-left' %> To countries
      <% end %>
    <% end %>
  <% else %>
    <p>No specific country selected. Showing all available cities.</p>
  <% end %>
</div>
