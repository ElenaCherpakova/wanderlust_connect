<%= form_with(model: city) do |form| %>
  <% if city.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
        <% city.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :country_id, 'Select a Country' %>
      <% if city.new_record? %>
        <%= form.collection_select :country_id, @user_countries, :id, :name, prompt: 'Choose a country' %>
      <% else %>
        <%= form.collection_select :country_ids, @user_countries, :id, :name, prompt: 'Choose a country' %>
      <% end %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
