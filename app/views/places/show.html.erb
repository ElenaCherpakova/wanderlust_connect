<div class="container">
  <div class="row">
    <div class="col-md-6 mt-3">
      <%= render @place %>
      <div class="mt-3">
        <%= link_to(edit_place_path(@place), class: "btn btn-primary btn-icon mb-2", title: "Edit this place") do %>
          <%= fa_icon 'edit' %> Edit
        <% end %>
        <%= link_to(places_path, class: "btn btn-secondary btn-icon mb-2", title: "Back to places") do %>
          <%= fa_icon 'arrow-left' %> Places
        <% end %>
        <%= button_to(@place, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-icon", title: "Destroy this place") do %>
          <%= fa_icon 'trash' %> Destroy
        <% end %>
      </div>
    </div>
  </div>
</div>
