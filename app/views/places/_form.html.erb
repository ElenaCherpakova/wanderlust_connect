<%= form_with(model: [@country, @city, @place]) do |form| %>
  <% if place.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(place.errors.count, "error") %> prohibited this place from being saved:</h2>
      <ul>
        <% place.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <div class="col-md-6">
    <%= form.label :name, style: "display: block", class:"form-label" %>
    <%= form.text_field :name, class:"form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <div class="col-md-6">
    <%= form.label :category, style: "display: block", class:"form-label" %>
    <%= form.text_field :category,  class:"form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <div class="col-md-6">
    <%= form.label :rating, style: "display: block", class:"form-label" %>
    <%= form.number_field :rating,  class:"form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <div class="col-md-6">
    <%= form.label :comments, style: "display: block", class:"form-label" %>
    <%= form.text_area :comments,  class:"form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :city, 'Select a City' %>
    <%= form.collection_select :city_id, @user_cities, :id, :name, prompt: 'Select a city' %>
  </div>
</div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
